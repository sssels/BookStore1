@page
@model BookStore1.Pages.Account.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div style="color:red;">
            @Model.ErrorMessage
        </div>
    }

    <form method="post">
        <div>
            <label for="Username">Username:</label>
            <input type="text" id="Username" name="Username" value="@Model.LoginInput.Username" required>
        </div>
        <div>
            <label for="Password">Password:</label>
            <input type="password" id="Password" name="Password" value="@Model.LoginInput.Password" required>
        </div>
        <div>
            <input type="checkbox" id="RememberMe" name="RememberMe" checked="@Model.LoginInput.RememberMe">
            <label for="RememberMe">Remember me?</label>
        </div>
        <button type="submit">Login</button>
    </form>
</body>
</html>
