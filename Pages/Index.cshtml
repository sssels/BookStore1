@page
@model BookStore1.Pages.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="search-bar">
    <form method="get" asp-page="/Books/Search">
        <input type="text" name="query" placeholder="Search for books..." class="form-control" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<div class="jumbotron">
    <h1 class="display-4">Welcome to BookStore!</h1>
    <hr class="my-4">
    <p>Get started by exploring our features:</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg" asp-page="/Account/Register" role="button">Register</a>
        <a class="btn btn-secondary btn-lg" asp-page="/Account/Login" role="button">Login</a>
        <a class="btn btn-success btn-lg" asp-page="/Books/Index" role="button">View Books</a>
        <a class="btn btn-info btn-lg" asp-page="/Cart/Index" role="button">Cart</a>
        <a class="btn btn-warning btn-lg" asp-page="/Books/Create" role="button">Create New Book</a>
    </p>
</div>

<style>
    .search-bar {
        margin-bottom: 20px;
    }
    .search-bar form {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .search-bar input {
        width: 300px;
        margin-right: 10px;
    }
</style>