@model List<BookStore1.Models.ManageUserRolesViewModel>

<h2>Manage User Roles for @ViewBag.Username</h2>

<form asp-action="Manage">
    <input type="hidden" asp-for="@Model[0].UserId" value="@ViewBag.userId" />
    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].RoleName</td>
                <td>
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
