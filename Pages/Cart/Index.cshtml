@model BookStore1.Models.Cart

<h2>Your Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Items)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Price * item.Quantity)</td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-bookId="@item.BookId">Remove</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div>Total: @(Model.Items.Sum(item => item.Price * item.Quantity))</div>

<div>
    <a asp-action="ClearCart">Clear Cart</a> |
    <a asp-action="Checkout">Checkout</a>
</div>
