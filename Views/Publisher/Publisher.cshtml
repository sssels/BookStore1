@model IEnumerable<BookStore1.Models.Publisher>

<h1>Publishers</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var publisher in Model)
        {
            <tr>
                <td>@publisher.Id</td>
                <td>@publisher.Name</td>
                <td>@publisher.Location</td>
                <td>
                    <a asp-action="Edit" asp-controller="Publisher" asp-route-id="@publisher.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Publisher" asp-route-id="@publisher.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Publisher" asp-route-id="@publisher.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Publisher">Create New Publisher</a>
