@page
@model BookStore1.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Book List";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-MlAoQu+rQk8Fr0uVEf+GFFfW8Jvh78JGZ49yAG9ScP4QX1fGa4F0UdL1ru1W7JFM" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="mb-4">Book List</h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-10">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Genre</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Bookz)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@book.Author</td>
                                <td>@book.Genre</td>
                                <td>@book.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                <td>
                                    <form method="post" asp-page-handler="AddToCart" class="d-inline">
                                        <input type="hidden" name="bookId" value="@book.ID" />
                                        <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
