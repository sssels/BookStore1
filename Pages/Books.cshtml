@page
@model BookStore1.Pages.BooksModel
@{
    ViewData["Title"] = "Books List";
}

<div class="text-center">
    <h1 class="display-4">Books</h1>
    <p>Here is the list of books available in our store.</p>
</div>

<div class="container">
    <h2>Books in Database</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Genre</th>
                <th>Stock</th>
                <th>Price</th>
                <th>Updated At</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.ID</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Genre</td>
                    <td>@book.InStock</td>
                    <td>@book.Price.ToString("C")</td>
                    <td>@book.UpdateDate.ToString("yyyy-MM-dd")</td>
                    <td>@book.CreateDate.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
